#include <stdio.h>
int main(void){
  float a, b, media, md;
  printf("Digite o primeiro valor\n");
  scanf("%f", &a);
  printf("Digite o segundo valor\n");
  scanf("%f", &b);
  media = (a + b) / 2;
  md = (a - b) / 2;
  printf("Média aritmética:\n%.2f\n", media);
  printf("Metade da diferença:\n%.2f", md);
  return 0;
}
